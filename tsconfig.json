{
  "compilerOptions": {
    "experimentalDecorators": true,
    "outDir": "./dist/",
    "noImplicitAny": true,
    "module": "es6",
    "target": "es5",
    "allowJs": true,
    "baseUrl": "src",
    "paths": { 
      "Components": ["components/*"],
      "Atoms":      ["components/atoms/*"],
      "Molecules":  ["components/molecules/*"],
      "Organisms":  ["components/organisms/*"],
      "Templates":  ["templates/*"],
      "Pages":      ["pages/*"],
      "Scripts":    ["scripts/*"],
      "Styles":    ["styles/*"],
    }
  },
  "exclude": [
      "node_modules"
  ]
}